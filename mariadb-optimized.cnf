[mysqld]
# InnoDB Settings - adjusted for smooth performance during D&D sessions
innodb_buffer_pool_size = 4G
innodb_log_file_size = 512M
# Changed to 1 for better reliability
innodb_flush_log_at_trx_commit = 1
innodb_flush_method = O_DIRECT
innodb_io_capacity = 2000
innodb_read_io_threads = 8
innodb_write_io_threads = 8

# Connection settings - reduced for low traffic
max_connections = 100
thread_cache_size = 50
wait_timeout = 1800
interactive_timeout = 1800

# Query cache - optimized for reference material (read-heavy)
query_cache_type = 1
query_cache_size = 128M
query_cache_limit = 2M

# Table settings
tmp_table_size = 256M
max_heap_table_size = 256M

# Performance tuning
join_buffer_size = 4M
sort_buffer_size = 4M
read_buffer_size = 2M
read_rnd_buffer_size = 8M

# Error logging
log_error = /var/lib/mysql/mysql_error.log
